{
  "name": "reoserv.net",
  "version": "1.3.0",
  "description": "The official documentation website for the `reoserv` project",
  "keywords": ["reoserv", "reoserv.net", "endless online emulator"],
  "author": "Richard Leek <richard@richardleek.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "NODE_ENV=development react-router dev --port 3030",
    "lint": "biome check --write --unsafe .",
    "lint:docs": "prettier --write *.md ./content/**/*.md",
    "start": "PORT=3030 NODE_ENV=production react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc --build --noEmit"
  },
  "paths": {
    "~/*": ["./app/*"]
  },
  "dependencies": {
    "@epic-web/invariant": "^1.0.0",
    "@epic-web/remember": "^1.1.0",
    "@react-router/node": "^7.0.1",
    "@react-router/serve": "^7.0.1",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "isbot": "^5.1.17",
    "marked": "^15.0.2",
    "marked-gfm-heading-id": "^4.1.1",
    "react": "rc",
    "react-dom": "rc",
    "react-icons": "^5.3.0",
    "react-router": "^7.0.1",
    "shiki": "^1.24.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@react-router/dev": "^7.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.10.1",
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prettier": "^3.4.1",
    "tailwindcss": "^3.4.15",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "vite-imagetools": "^7.0.5",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc",
    "react": "rc",
    "react-dom": "rc"
  },
  "trustedDependencies": ["@biomejs/biome", "esbuild", "sharp"],
  "engines": {
    "node": ">=22"
  }
}
